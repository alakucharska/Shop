<%= render "flash" %>

<h1><%= @product.name %></h1>
<p><%= @product.price %></p>
<p><%= @product.description %></p>
<p><%= @product.category %></p>
<% if @product.image.attached? %>
  <p><%= image_tag @product.image.variant(resize_to_limit: [150, 150]) %> 
  <% end %></p>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= button_to "Destroy", @product, method: :delete %></li>
</ul>
