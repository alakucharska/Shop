<%= render "flash" %>

<h1><%= @product.name %></h1>
<p><%= @product.price %></p>
<p><%= @product.description %></p>
<p><%= @product.category %></p>
<p><%= image_tag @product.pic %></p>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= button_to "Destroy", @product, method: :delete %></li>
</ul>
